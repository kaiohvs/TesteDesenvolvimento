@model List<Empresa>

@{
    ViewData["Title"] = "Listagem de empresas";
}
<div class="text-center">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {

        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />

    <h1 class="display-4">Listagem de empresas</h1>
    <br />

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Empresa" asp-action="Criar"> Adicionar nova empresa</a>
    </div>
    <br />

    <table class="table table-hover" id="TabelaId">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Documento</th>
                <th scope="col">DataCriacao</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Empresa empresa in Model)
                {
                    <tr>
                        <th scope="row">@empresa.Id</th>
                        <td>@empresa.NomeEmpresa</td>
                        <td>@empresa.DocumentoEmpresa</td>
                        <td>@empresa.DataCriacao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@empresa.Id" asp-controller="Empresa" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@empresa.Id" asp-controller="Empresa" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>


</div>

